<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ags.lcz.core.model.playandroid.ArticleDetailEntity" />

        <import type="android.view.View" />

        <import type="android.text.Html" />

    </data>

    <com.skydoves.transformationlayout.TransformationLayout
        android:id="@+id/transformationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:transformation_duration="550">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/background800"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/background800"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:paddingBottom="16dp"
                tools:background="@color/background800"
                tools:ignore="UnusedAttribute">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@{item.shareUser}"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="李宗伟" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_isTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="置顶"
                    android:textColor="@color/white"
                    android:visibility="@{item.type==1?View.VISIBLE:View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_author"
                    app:layout_constraintStart_toEndOf="@+id/tv_author"
                    app:layout_constraintTop_toTopOf="@+id/tv_author" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="新"
                    android:textColor="@color/white"
                    android:visibility="@{item.fresh?View.VISIBLE:View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_isTop"
                    app:layout_constraintStart_toEndOf="@+id/tv_isTop"
                    app:layout_constraintTop_toTopOf="@+id/tv_isTop" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{item.articleTagEntities[0].name}"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_new"
                    app:layout_constraintStart_toEndOf="@+id/tv_new"
                    app:layout_constraintTop_toTopOf="@+id/tv_new"
                    tools:text="本站发布" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{item.articleTagEntities[1].name}"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_tag1"
                    app:layout_constraintStart_toEndOf="@+id/tv_tag1"
                    app:layout_constraintTop_toTopOf="@+id/tv_tag1"
                    tools:text="问答" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@{item.niceDate}"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_tag2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_tag2"
                    tools:text="1小时前" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{Html.fromHtml(item.title)}"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tv_time"
                    app:layout_constraintStart_toStartOf="@+id/tv_author"
                    app:layout_constraintTop_toBottomOf="@+id/tv_author"
                    tools:text="这是一个根据JetpackMvvm框架开发玩Android的一个APP" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="@{item.superChapterName+'·'+item.chapterName}"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_content"
                    tools:text="分类 项目" />

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@{item.collect?@drawable/icon_md_collect:@drawable/icon_md_collect_no}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_type"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/icon_md_collect" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.skydoves.transformationlayout.TransformationLayout>

</layout>